{
    "name": "@ts-delight/debug.macro",
    "version": "1.0.0",
    "description": "Lightweight macro to make debug logging more effective",
    "main": "debug.macro.js",
    "types": "debug.macro.d.ts",
    "scripts": {
        "format": "prettier --write ./**/*.js ./**/*.ts",
        "test": "tsc && jest"
    },
    "publishConfig": {
        "access": "public"
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "keywords": [
        "debug",
        "logging"
    ],
    "author": "Lorefnon <lorefnon@gmail.com>",
    "license": "MIT",
    "devDependencies": {
        "@babel/core": "^7.5.5",
        "@babel/preset-env": "^7.5.5",
        "@babel/preset-typescript": "^7.3.3",
        "@types/jest": "^24.0.18",
        "@types/node": "^12.7.2",
        "babel-jest": "^24.9.0",
        "babel-plugin-macros": "^2.6.1",
        "jest": "^24.9.0",
        "prettier": "^1.18.2",
        "typescript": "^3.5.3"
    },
    "dependencies": {
        "@babel/traverse": "^7.5.5",
        "lodash": "^4.17.15"
    }
}
