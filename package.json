{
    "name": "@ts-delight/debug.macro",
    "version": "1.1.0",
    "description": "Lightweight macro to make debug logging more effective",
    "main": "debug.macro.js",
    "types": "debug.macro.d.ts",
    "scripts": {
        "build": "babel src --out-dir lib --extensions .ts && cp fake-definitions/*.d.ts lib ",
        "format": "prettier --write ./**/*.js ./**/*.ts --extensions .ts",
        "test": "yarn run build && tsc && jest",
        "prepublishOnly": "yarn run test"
    },
    "publishConfig": {
        "access": "public"
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "keywords": [
        "debug",
        "logging",
        "babel-plugin-macros"
    ],
    "author": "Lorefnon <lorefnon@gmail.com>",
    "license": "MIT",
    "devDependencies": {
        "@babel/cli": "^7.10.5",
        "@babel/core": "^7.11.1",
        "@babel/plugin-transform-runtime": "^7.11.0",
        "@babel/preset-env": "^7.11.0",
        "@babel/preset-typescript": "^7.10.4",
        "@types/babel-plugin-macros": "^2.8.2",
        "@types/babel__code-frame": "^7.0.1",
        "@types/debug": "^4.1.5",
        "@types/jest": "^26.0.10",
        "@types/node": "^14.0.27",
        "babel-jest": "^26.3.0",
        "babel-plugin-macros": "^2.8.0",
        "core-js": "3",
        "core-js-compat": "^3.6.5",
        "jest": "^26.4.0",
        "prettier": "^2.0.5",
        "typescript": "^3.9.7"
    },
    "dependencies": {
        "@babel/traverse": "^7.11.0",
        "lodash": "^4.17.20"
    }
}
